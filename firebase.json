{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ]
        }
    ],
    "hosting": {
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "!**/_next/**"
        ],
        "public": "out",
        "cleanUrls": true,
        "trailingSlash": true
    }
}